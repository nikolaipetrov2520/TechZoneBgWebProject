@model TechZoneBgWebProject.Web.ViewModels.MainNews.MainNewsComponentViewModel

<div>
    <h3 class="h4 mb-4 text-center">Водещи HiTech новини</h3>
</div>
@foreach (var news in this.Model.MainNews)
{
    <article class="media">
        <div>
            <div class="row">
                <a class="rounded col-md-4" href="@news.OriginalUrl" target="_blank">
                    <img class="card-img zoomimg" src="@news.ImageUrl?t=@news.CreatedOn.ToBinary()" title="@news.Title" alt="@news.Title">
                </a>
                <div class="col-md-8">
                    <a class="text-dark font-weight-light font-weight-bold news" href="@news.OriginalUrl" target="_blank">@news.Title</a>
                </div>
            </div>
            <ul class="text-center mt-2">
                <li class="list-inline-item">
                    <a class="list-inline-item text-muted font-weight-light news" href="@news.SourceUrl" target="_blank">@news.SourceName</a>
                </li>
                <li class="list-inline-item text-muted font-weight-light">/</li>
                <li class="list-inline-item text-muted font-weight-light">
                    <time datetime="@news.CreatedOn.ToString("O")">@news.CreatedOn.ToString("dd/MM/yyyy HH:mm")</time>
                </li>
            </ul>
        </div>
    </article>
}