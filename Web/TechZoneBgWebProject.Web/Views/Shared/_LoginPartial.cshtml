@using TechZoneBgWebProject.Common
@using TechZoneBgWebProject.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (this.User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link white-text" style="padding: unset" asp-area="Identity" asp-page="/Account/Manage/Index" title="@UserManager.GetUserAsync(this.User).Result.FirstName @UserManager.GetUserAsync(this.User).Result.LastName">
                <vc:users-login-status></vc:users-login-status>
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link white-text" asp-area="Identity" asp-page="/Account/Register"  title="Регистрация">Регистрация</a>
        </li>
        <li class="nav-item">
            <a class="nav-link white-text" asp-area="Identity" asp-page="/Account/Login" title="Вход"><i class="fas fa-sign-in-alt layout"></i></a>
        </li>
    }
</ul>
