                            {
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    var active = i == Model.PageIndex ? "active" : string.Empty;
                                    <li>
                                        <a class="@active"
                                           asp-area=""
                                           asp-controller="Orders"
                                           asp-action="All"
                                           asp-route-page="@i">
                                            @i
                                        </a>
                                    </li>
                                }
                            }
                            else
                            {
                                @if (Model.PageIndex < 3)
                                {
                                    @for (int i = 1; i <= 3; i++)
                                    {
                                        var active = i == Model.PageIndex ? "active" : string.Empty;
                                        <li>
                                            <a class="@active"
                                               asp-area=""
                                               asp-controller="Orders"
                                               asp-action="All"
                                               asp-route-page="@i">
                                                @i
                                            </a>
                                        </li>
                                    }
