                                        <a style="border: none; padding: 8px 0px;">
                                            ...
                                        </a>
                                    </li>
                                    @for (int i = Model.PageIndex - 1; i <= Model.PageIndex + 1; i++)
                                    {
                                        var active = i == Model.PageIndex ? "active" : string.Empty;
                                        <li>
                                            <a class="@active"
                                               asp-area=""
                                               asp-controller="Orders"
