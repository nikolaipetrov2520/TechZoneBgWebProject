                                        <a style="border: none; padding: 8px 0px;">
                                            ...
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-area=""
                                           asp-controller="Orders"
                                           asp-action="All"
                                           asp-route-page="@Model.TotalPages">
                                            @Model.TotalPages
                                        </a>
                                    </li>
                                }
                                else if (Model.PageIndex > Model.TotalPages - 2)
                                {
                                    <li>
                                        <a asp-area=""
                                           asp-controller="Orders"
                                           asp-action="All"
                                           asp-route-page="1">
                                            1
                                        </a>
                                    </li>
                                    <li>
                                        <a style="border: none; padding: 8px 0px;">
                                            ...
                                        </a>
                                    </li>
