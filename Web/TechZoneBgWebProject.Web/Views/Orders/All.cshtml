@model TechZoneBgWebProject.Web.ViewModels.Orders.OrdersAllViewModel
@{
    ViewData["Title"] = "Поръчки";
}

<div class="container">
    <nav class="tt-topic-list" style="word-break: break-word;">

        @if (Model.Carts.Any())
        {


