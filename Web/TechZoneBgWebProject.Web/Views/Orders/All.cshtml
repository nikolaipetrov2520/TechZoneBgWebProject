                                   asp-controller="Orders"
                                   asp-action="All"
                                   asp-route-page="@Model.NextPage">
                                    &raquo;
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }

            <table>
                <thead>
                    <tr>
                        <th class="Cart-min cart-text">Юсер</th>
                        <th class="cart-text">Адрес</th>
                        <th class="Cart-min cart-text">Сума</th>
                        <th class="cart-text">Коментар</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cart in Model.Carts)
                    {

                    <tr id="@cart.Id" class="tt-itemOrder">
                        <td class="Cart-min cart-text">
                            @cart.FirstName @cart.LastName
                        </td>
                        <td>
                            <div>
                                @cart.Address
                            </div>
                        </td>
                        <td class="Cart-min cart-text">
                            <div style="font-size: 22px; padding: 5px;" class="tt-col-value hide-mobile">@cart.Sum лв.</div>
                        </td>
                        <td id="@cart.Comment" class="cart-text cart-quantity">
                            <div style="height: 28px;">
                                @cart.Comment
                            </div>
                        </td>
                        <td>
                            <a asp-area="" asp-controller="Orders" asp-action="Details" asp-route-id="@cart.Id">
                                Детайли
                            </a>
                        </td>
                    </tr>


                    }
                </tbody>
            </table>

