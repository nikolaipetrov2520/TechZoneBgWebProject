            {
                <div class="text-center">
                    <nav>
                        <ul class="pagination mb-4">
                            <li>
                                <a asp-area=""
                                   asp-controller="Orders"
                                   asp-action="All"
                                   asp-route-page="@Model.PreviousPage">
                                    &laquo;
                                </a>
                            </li>
